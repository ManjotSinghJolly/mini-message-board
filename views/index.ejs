<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <a href="/new">Add a new message</a>

    <ul>
      <% messages.forEach((message, index) => { %>
      <li>
        <strong><%= message.user %></strong><br />
        <p><%= message.text %></p>
        <small><%= message.added.toLocaleString() %></small>
        <a href="/message/<%= index %>">Open</a>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
